{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    },
    "types": [
      "vite/client",
      "vitest/globals"
    ],
  },
  "include": [
    "src/env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "vite.config.*",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
